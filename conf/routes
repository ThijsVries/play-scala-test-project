# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                               controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)

POST     /author                        controllers.AuthorController.save()
GET      /author/get/:firstName         controllers.AuthorController.getByFirstName(firstName : String)
GET      /author/all                    controllers.AuthorController.all()

POST     /book                          controllers.BookController.save()
PUT      /book                          controllers.BookController.update()
GET      /book                          controllers.BookController.all()
GET      /book/:bookId                  controllers.BookController.get(bookId : Long)
DELETE   /book/:bookId                  controllers.BookController.delete(bookId : Long)
GET      /book/author/:authorId         controllers.BookController.byAuthor(authorId : Long)
